{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node16"
  },

  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
